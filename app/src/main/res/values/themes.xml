<resources>
    <!-- Base application theme. -->
    <style name="Theme.CapstoneC22PS353" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextCategory">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextProfile">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubject">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextTitleProduct">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextPriceProduct">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInfo">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextLoctProduct">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextIndicator">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

</resources>